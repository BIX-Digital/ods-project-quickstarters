{
    "kind": "Template",
    "apiVersion": "v1",
    "objects": [
        {
            "kind": "Secret",
            "apiVersion": "v1",
            "metadata": {
                "name": "airflow-credentials",
                "labels": {
                    "cluster": "airflow",
                    "ods.quickstarter": "airflow-quickstarter"
                }
            },
            "stringData": {
                "fernetkey": "${AIRFLOW_FERNET_KEY}"
            },
            "type": "Opaque"
        },
        {
            "apiVersion": "v1",
            "kind": "ConfigMap",
            "data": {
                "AIRFLOW_EXECUTOR": "openshift_plugin.OpenShiftExecutor",
                "AIRFLOW__KUBERNETES__WORKER_CONTAINER_REPOSITORY": "${OC_DOCKER_REGISTRY}/${NAMESPACE}/airflow-worker",
                "AIRFLOW__KUBERNETES__WORKER_CONTAINER_TAG": "latest",
                "ELASTICSEARCH_URL": "http://airflow-elasticsearch.${NAMESPACE}.svc:9200",
                "POSTGRES_HOST": "airflow-postgresql.${NAMESPACE}.svc",
                "AIRFLOW__OAUTH__BASE_URL": "${OC_API_URL}",
                "AIRFLOW__OAUTH__CLIENT_ID": "system:serviceaccount:${NAMESPACE}:airflow",
                "AIRFLOW__OAUTH__AUTHORIZE_URL": "${OC_API_URL}/oauth/authorize",
                "AIRFLOW__OAUTH__ACCESS_TOKEN_URL": "${OC_API_URL}/oauth/token",
                "AIRFLOW__OAUTH__USER_INFO_URL": "${OC_API_URL}/apis/user.openshift.io/v1/users/~",
                "AIRFLOW__OPENSHIFT_PLUGIN__ACCESS_ROLES": "admin,edit",
                "AIRFLOW__OPENSHIFT_PLUGIN__SUPERUSER_ROLES": "admin",
                "AIRFLOW__OPENSHIFT_PLUGIN__OPENSHIFT_CONSOLE_URL": "${OC_CONSOLE_URL}"
            },
            "metadata": {
                "labels": {
                    "cluster": "airflow",
                    "ods.quickstarter": "airflow-quickstarter"
                },
                "name": "airflow-environment"
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "airflow-scheduler",
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-scheduler",
                    "ods.quickstarter": "airflow-quickstarter"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "airflow-webserver",
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-webserver",
                    "ods.quickstarter": "airflow-quickstarter"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "airflow-scheduler",
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-scheduler",
                    "ods.quickstarter": "airflow-quickstarter"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "airflow-scheduler"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "${SHARED_IMAGE_NAMESPACE}",
                                "name": "${AIRFLOW_IMAGE_NAME}:${AIRFLOW_IMAGE_TAG}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "cluster": "airflow",
                    "component": "airflow-scheduler",
                    "deploymentconfig": "airflow-scheduler"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "cluster": "airflow",
                            "component": "airflow-scheduler",
                            "deploymentconfig": "airflow-scheduler"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "airflow-scheduler",
                                "image": "${SHARED_IMAGE_NAMESPACE}/${AIRFLOW_IMAGE_NAME}:${AIRFLOW_IMAGE_TAG}",
                                "ports": [],
                                "envFrom": [
                                    {
                                        "configMapRef": {
                                            "name": "airflow-environment"
                                        }
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "FERNET_KEY",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-credentials",
                                                "key": "fernetkey"
                                            }
                                        }
                                    },
                                    {
                                        "name": "AIRFLOW_COMMAND",
                                        "value": "scheduler"
                                    },
                                    {
                                        "name": "POSTGRES_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-user"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRES_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRES_DATABASE",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-name"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ELASTICSEARCH_USERNAME",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-elasticsearch-credentials",
                                                "key": "username"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ELASTICSEARCH_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-elasticsearch-credentials",
                                                "key": "password"
                                            }
                                        }
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "1Gi"
                                    },
                                    "requests": {
                                        "memory": "100Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "airflow-scheduler-data",
                                        "mountPath": "/opt/app-root/src/airflow/dags"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "volumes": [
                            {
                                "name": "airflow-scheduler-data",
                                "persistentVolumeClaim": {
                                    "claimName": "airflow-scheduler"
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "airflow-webserver",
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-webserver"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "recreateParams": {
                        "timeoutSeconds": 600
                    },
                    "resources": {},
                    "activeDeadlineSeconds": 21600
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "airflow-webserver"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "namespace": "${SHARED_IMAGE_NAMESPACE}",
                                "name": "${AIRFLOW_IMAGE_NAME}:${AIRFLOW_IMAGE_TAG}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "revisionHistoryLimit": 10,
                "test": false,
                "selector": {
                    "cluster": "airflow",
                    "component": "airflow-webserver",
                    "deploymentconfig": "airflow-webserver"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "cluster": "airflow",
                            "component": "airflow-webserver",
                            "deploymentconfig": "airflow-webserver"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "airflow-webserver",
                                "image": "${SHARED_IMAGE_NAMESPACE}/${AIRFLOW_IMAGE_NAME}:${AIRFLOW_IMAGE_TAG}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "envFrom": [
                                    {
                                        "configMapRef": {
                                            "name": "airflow-environment"
                                        }
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "FERNET_KEY",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-credentials",
                                                "key": "fernetkey"
                                            }
                                        }
                                    },
                                    {
                                        "name": "AIRFLOW_COMMAND",
                                        "value": "webserver"
                                    },
                                    {
                                        "name": "AIRFLOW__OAUTH__CLIENT_SECRET",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${OPENSHIFT_OAUTH_SERVICE_ACCOUNT_SECRET}",
                                                "key": "token"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRES_USER",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-user"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRES_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRES_DATABASE",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-postgresql",
                                                "key": "database-name"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ELASTICSEARCH_USERNAME",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-elasticsearch-credentials",
                                                "key": "username"
                                            }
                                        }
                                    },
                                    {
                                        "name": "ELASTICSEARCH_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "airflow-elasticsearch-credentials",
                                                "key": "password"
                                            }
                                        }
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "1Gi"
                                    },
                                    "requests": {
                                        "memory": "100Mi"
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "name": "airflow-webserver-data",
                                        "mountPath": "/opt/app-root/src/airflow/dags"
                                    }
                                ],
                                "terminationMessagePath": "/dev/termination-log",
                                "terminationMessagePolicy": "File",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "volumes": [
                            {
                                "name": "airflow-webserver-data",
                                "persistentVolumeClaim": {
                                    "claimName": "airflow-webserver"
                                }
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {},
                        "schedulerName": "default-scheduler"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "airflow-webserver",
                "creationTimestamp": null,
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-webserver",
                    "deploymentconfig": "airflow-webserver"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "airflow-webserver-default",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "cluster": "airflow",
                    "component": "airflow-webserver",
                    "deploymentconfig": "airflow-webserver"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "route.openshift.io/v1",
            "metadata": {
                "name": "airflow-webserver",
                "creationTimestamp": null,
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-webserver",
                    "deploymentconfig": "airflow-webserver",
                    "ods.quickstarter": "airflow-quickstarter"
                }
            },
            "spec": {
                "host": "airflow-webserver-${NAMESPACE}.${OPENSHIFT_APP_HOST}",
                "to": {
                    "kind": "Service",
                    "name": "airflow-webserver",
                    "weight": 100
                },
                "port": {
                    "targetPort": "airflow-webserver-default"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                },
                "wildcardPolicy": "None"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-worker"
                },
                "name": "airflow-worker"
            },
            "spec": {
                "dockerImageRepository": "airflow-worker"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "cluster": "airflow",
                    "component": "airflow-worker"
                },
                "name": "airflow-worker"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "airflow-worker:latest"
                    }
                },
                "runPolicy": "Serial",
                "source": {
                    "type": "Binary"
                },
                "strategy": {
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "airflow:1.10.3",
                            "namespace": "shared-services"
                        }
                    },
                    "type": "Docker"
                }
            }
        }
    ],
    "parameters": [
        {
            "description": "Namespace where ElasticSearch is being deployed",
            "name": "NAMESPACE",
            "required": true
        },
        {
            "description": "Url of the OpenShift API",
            "name": "OC_API_URL",
            "required": true
        },
        {
            "description": "URL of the OpenShift Console",
            "name": "OC_CONSOLE_URL",
            "required": true
        },
        {
            "description": "Host:IP of the openshift docker image registry",
            "name": "OC_DOCKER_REGISTRY",
            "required": true
        },
        {
            "description": "Namespace where the shared images are stored",
            "name": "SHARED_IMAGE_NAMESPACE",
            "value": "shared-services"
        },
        {
            "description": "Airflow shared image stream name ",
            "name": "AIRFLOW_IMAGE_NAME",
            "value": "airflow"
        },
        {
            "description": "Airflow shared image tag which should be used",
            "name": "AIRFLOW_IMAGE_TAG",
            "value": "1.10.3"
        },
        {
            "description": "Fernet key for securing stored Airflow Connection",
            "name": "AIRFLOW_FERNET_KEY",
            "required": true
        },
        {
            "name": "VOLUME_CAPACITY",
            "description": "Size of the PVC for Airflow Webserver and Scheduler",
            "value": "512Mi"
        },
        {
            "name": "OPENSHIFT_APP_HOST",
            "description": "Host for all OpenShift app routes",
            "required": true
        },
        {
            "name": "OPENSHIFT_OAUTH_SERVICE_ACCOUNT_SECRET",
            "description": "OAuth service account token secret",
            "required": true
        }
    ]
}